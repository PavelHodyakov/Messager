<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="persistenceUnit">
        <mapping-file>com/Tables/BaseMessageEntity.xml</mapping-file>
        <mapping-file>com/Tables/MessageEntity.xml</mapping-file>
        <mapping-file>com/Tables/SubscriptionEntity.xml</mapping-file>
        <mapping-file>com/Tables/SystemEntity.xml</mapping-file>
        <class>com.Tables.BaseMessageEntity</class>
        <class>com.Tables.MessageEntity</class>
        <class>com.Tables.SubscriptionEntity</class>
        <class>com.Tables.SystemEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/StorageMessage"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
